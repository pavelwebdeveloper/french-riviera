<p id="infomessage"><%= infomessage %></p>



<form>
                <fieldset>
                    <legend>Contact Us</legend>
					<div class="form-group">
                    <label class="top">Full name*</label> 
					<input class="form-control form-control-custom" type="text" name="fname" pattern="[A-Za-z ]{2,}" id="fname" required>
					</div>
					<div class="form-group">
                    <label class="top">Email*</label>
					<input class="form-control form-control-custom" type="email" name="email" id="email" placeholder="someone@gmail.com" pattern="[A-Za-z0-9.]+@[a-z0-9]+\.[a-z]{2,}$" required>
					</div>
					<div class="form-group">
                    <label class="top">Comments*</label>
                        <textarea class="form-control" name="message" id="message" placeholder="Please, input the additional infromation here"></textarea>
						</div>
                    
                </fieldset>

                <input class="btn btn-success" type="submit" value="Contact Us" onclick="resultOfSubmit()">

            </form>